<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/eos_dream_settings_title"
    android:key="eos_dream_settings">
    <CheckBoxPreference android:key="eos_dream_interactive"
        android:title="@string/eos_dream_interactive_title"
        android:defaultValue="false"
        android:persistent="true"/>
    <CheckBoxPreference android:key="eos_dream_rotation"
        android:title="@string/eos_dream_rotation_title"
        android:defaultValue="false"
        android:persistent="true"/>
    <com.android.systemui.eos.SelectableEditTextPreference android:key="eos_dream_count"
        android:title="@string/eos_dream_count_title"
        android:persistent="true"
        android:numeric="decimal"
        android:enabled="true"
        android:maxLength="2"/>
    <ListPreference android:key="eos_dream_speed"
        android:title="@string/eos_dream_speed_title"
        android:entries="@array/eos_dream_speed_array"
        android:entryValues="@array/eos_dream_speed_array_values"
        android:defaultValue="500"
        android:persistent="true"/>
    <CheckBoxPreference android:key="eos_dream_transparent"
        android:title="@string/eos_dream_transparent_title"
        android:defaultValue="false"
        android:persistent="true"/>
    <CheckBoxPreference android:key="eos_dream_debug"
        android:title="@string/eos_dream_debug_title"
        android:defaultValue="false"
        android:persistent="true"/>
</PreferenceScreen>