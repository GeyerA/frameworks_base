<com.android.systemui.statusbar.HorizontalPager xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res/com.android.systemui"
    android:id="@+id/eos_header_scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <!-- Volume -->
    <LinearLayout
        android:id="@+id/volume_row"
        android:background="@drawable/notification_header_bg"
        style="@style/StatusBarPanelSettingsRow" >

        <ImageView
            android:id="@+id/eos_sound_icon"
            style="@style/StatusBarPanelSettingsIcon" />

        <com.android.systemui.statusbar.policy.ToggleSlider
            android:id="@+id/volume"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            systemui:text="@string/statusbar_eos_volume_slider_label" />
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/notification_panel_header_height"
        layout="@layout/status_bar_expanded_header" />

    <!-- Brightness -->
    <LinearLayout
        android:id="@+id/brightness_row"
        android:background="@drawable/notification_header_bg"
        style="@style/StatusBarPanelSettingsRow" >

        <ImageView
            android:id="@+id/brightness_icon"
            style="@style/StatusBarPanelSettingsIcon"
            android:src="@drawable/ic_sysbar_brightness" />

        <com.android.systemui.statusbar.policy.ToggleSlider
            android:id="@+id/brightness"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            systemui:text="@string/status_bar_settings_auto_brightness_label" />
    </LinearLayout>
</com.android.systemui.statusbar.HorizontalPager>
